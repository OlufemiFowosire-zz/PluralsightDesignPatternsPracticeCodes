<Page x:Class="EventBookingProcess_.StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventBookingProcess_"
      mc:Ignorable="d" Background="Wheat"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatusPage">
    <TextBlock x:Name="txtStatus" HorizontalAlignment="Center" TextWrapping="Wrap"
               Text="{Binding Booking.StatusMessage}" VerticalAlignment="Center" FontSize="36"/>
</Page>
