<Page x:Class="EventBookingProcess.UI.EntryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventBookingProcess.UI"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800"
        Background="Wheat"
        Title="EntryPage" >
    <Border Padding="65">
        <StackPanel>
            <Label Content="Attendee Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtAttendee" Height="24" Margin="20 0 0 20" Width="434" HorizontalAlignment="Left"/>
            <Label Content="Number of Tickets:" FontWeight="Bold"/>
            <TextBox x:Name="txtTicketCount" Height="24" Margin="20 0 0 0" Width="434" HorizontalAlignment="Left" 
                     PreviewTextInput="ValidateNumber"/>
        </StackPanel>
    </Border>
</Page>
